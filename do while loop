#include <stdio.h>

int main()
{
    // Declare variables to store two numbers, their sum and average
    int a, b, sum, avg;

    // do-while loop to ensure user enters only positive numbers
    do
    {
        // Ask the user to enter two positive numbers
        printf("\nEnter two positive numbers: ");
        scanf("%d %d", &a, &b);

        // Check if any entered number is negative
        if (a < 0 || b < 0)
        {
            // Display error message if numbers are not positive
            printf("Cannot be calculated. Please enter positive numbers.\n");
        }

    } while (a < 0 || b < 0);   // Repeat loop until both numbers are positive

    // Calculate the sum of the two numbers
    sum = a + b;

    // Calculate the average of the two numbers
    avg = sum / 2;

    // Display the sum
    printf("\nThe sum is %d", sum);

    // Display the average
    printf("\nThe average is %d", avg);

    return 0;   // End of program
}
